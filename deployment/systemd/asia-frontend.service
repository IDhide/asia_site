[Unit]
Description=Asia Site Frontend (Next.js)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/asia-site/frontend
Environment="NODE_ENV=production"
Environment="PORT=3010"
ExecStart=/usr/bin/npm start
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=asia-frontend

[Install]
WantedBy=multi-user.target
